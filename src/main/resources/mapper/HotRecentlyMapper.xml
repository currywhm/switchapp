<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.HotRecentlyMapper">
    <resultMap id="hotRecentlyMapper" type="com.tencent.wxcloudrun.model.HotRecently">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sub" column="sub"/>
        <result property="price" column="price"/>
        <result property="score" column="score"/>
        <result property="img" column="img"/>
    </resultMap>

    <select id="getHotRecently" resultMap="hotRecentlyMapper" parameterType="com.tencent.wxcloudrun.model.HotRecently">
        SELECT `id`, `name`, `sub`,`price`, `score`,`img`
        FROM hotMgr
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="name != null and name != ''">
                AND name like concat('%', #{name}, '%')
            </if>
            <if test="sub != null and sub != ''">
                AND sub like concat('%', #{sub}, '%')
            </if>
            <if test="price != null and price != ''">
                AND price = #{price}
            </if>
            <if test="score != null and score != ''">
                AND score = #{score}
            </if>
        </where>
    </select>
</mapper>
